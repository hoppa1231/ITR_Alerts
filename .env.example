# Обязательные параметры
# Базовый URL Snipe-IT
SNIPEIT_BASE_URL=https://your-snipe-it.example.com

# API-токен из Snipe-IT
SNIPEIT_API_TOKEN=your_snipeit_api_token

# Токен Telegram-бота, полученный у @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Опционально
# Путь к файлу сопоставления пользователей Snipe-IT → Telegram chat ID
USER_CHAT_MAP_PATH=user_map.json

# Отправлять уведомления о лицензиях, истекающих через N дней (включительно)
NOTIFY_DAYS=14

# Если задано (например, 14) — отправлять уведомление только ровно за N дней до истечения
NOTIFY_ONLY_ON_DAY=

# Включать уже истёкшие лицензии
INCLUDE_EXPIRED=false

# Режим запуска: once | schedule
RUN_MODE=once

# Время ежедневного запуска для режима schedule (24-часовой формат, локальное время)
SCHEDULE_TIME=12:00

# Размер страницы при пагинации API Snipe-IT
PAGE_SIZE=100

# HTTP-таймаут в секундах
REQUEST_TIMEOUT=30

# Уровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Если true — не отправлять сообщения в Telegram (только логировать)
DRY_RUN=false

# Чат по умолчанию, если пользователь не найден в сопоставлении
FALLBACK_CHAT_ID=

# Включить саморегистрацию пользователей в Telegram с подтверждением администратором
ENABLE_REGISTRATION=false

# Список chat ID администраторов Telegram, через запятую
ADMIN_CHAT_IDS=

# Интервал опроса обновлений Telegram (в секундах)
POLL_SECONDS=30

# Файл состояния для хранения offset обновлений Telegram
STATE_PATH=state.json


# Portainer tip:
# Mount a directory and set these to the directory, e.g. /app/data
# USER_CHAT_MAP_PATH=/app/data
# STATE_PATH=/app/data
